<div class="container">
<h1>New game</h1>
</div>

<div class="container">
<ul id="list-inline">
<% @letters.each do |letter| %>
  <li> <%=letter.capitalize!%> </li>
<%end%>
</ul>
</div>

<div class="container">
<p>What is the longuest word you can find ?</p>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input class="search-bar" type="text" name="answer">
  <input class="btn-white" type="submit" value="Play">
  <%= hidden_field_tag :letters, @letters %>
</form>
</div>
